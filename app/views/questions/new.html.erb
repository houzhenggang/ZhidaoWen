<h1>New question</h1>

<% form_for(@question) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :from %><br />
    <%= f.text_field :from %>
  </p>
  <p>
    <%= f.label :category %><br />
    <%= f.text_field :category %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :min_title %><br />
    <%= f.text_field :min_title %>
  </p>
  <p>
    <%= f.label :max_title %><br />
    <%= f.text_area :max_title %>
  </p>
  <p>
    <%= f.label :sort_id %><br />
    <%= f.text_field :sort_id %>
  </p>
  <p>
    <%= f.label :is_display %><br />
    <%= f.check_box :is_display %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', questions_path %>